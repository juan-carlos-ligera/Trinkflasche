const button = document.getElementById("myButton");
const button2 = document.getElementById("myButton2");
const button3 = document.getElementById("myButton3");
const textContainer = document.getElementById("textContainer");
const textContainer2 = document.getElementById("textContainer2");
const textContainer3 = document.getElementById("textContainer3");
let active = false;
let active2 = false;
let active3 = false;
button.addEventListener("click", function() {
  textContainer2.style.display = "none";
  button2.classList.remove("active");
  active2 = false;
  textContainer3.style.display = "none";
  button3.classList.remove("active");
  active3 = false;
  if (!active) {
    textContainer.style.display = "block";
    button.classList.add("active");
    active = true;
  } else {
    textContainer.style.display = "none";
    button.classList.remove("active");
    active = false;
  }
});
button2.addEventListener("click", function() {
  textContainer.style.display = "none";
  button.classList.remove("active");
  active = false;
  textContainer3.style.display = "none";
  button3.classList.remove("active");
  active3 = false;
  if (!active2) {
    textContainer2.style.display = "block";
    button2.classList.add("active");
    active2 = true;
  } else {
    textContainer2.style.display = "none";
    button2.classList.remove("active");
    active2 = false;
  }
});
button3.addEventListener("click", function() {
  textContainer.style.display = "none";
  button.classList.remove("active");
  active = false;
  textContainer2.style.display = "none";
  button2.classList.remove("active");
  active2 = false;
  if (!active3) {
    textContainer3.style.display = "block";
    button3.classList.add("active");
    active3 = true;
  } else {
    textContainer3.style.display = "none";
    button3.classList.remove("active");
    active3 = false;
  }
});
</script>
